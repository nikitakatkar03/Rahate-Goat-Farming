<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/teal_700"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        layout="@layout/main_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#BBF1F1">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextTextPersonName3"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_margin="16dp"
                            android:background="@drawable/search_edit"
                            android:drawableLeft="@drawable/baseline_search_24"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="Search for goats"
                            android:textColorHint="@color/black"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"
                            android:textStyle="italic"
                            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/Youtube"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:src="@drawable/youtube" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G1"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="100dp"
                                android:layout_marginRight="100dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/imageView1"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.511"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_house_siding_24" />

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="98dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:text="Learn Goat Farming"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView1"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G2"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_width="70dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/breeds" />

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="97dp"
                                    android:layout_height="47dp"
                                    android:layout_weight="1"
                                    android:text="Breeds Characteristics"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image2"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G3"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image3"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_grass_24" />

                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="77dp"
                                    android:layout_height="39dp"
                                    android:layout_weight="1"
                                    android:text="Food to
                                Feed"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image3"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G4"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="100dp"
                                android:layout_marginRight="100dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.511"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_vaccines_24" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="98dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:text="Disease Prevention and Treatment"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G5"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image5"
                                    android:layout_width="70dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/milk" />

                                <TextView
                                    android:id="@+id/text5"
                                    android:layout_width="97dp"
                                    android:layout_height="47dp"
                                    android:layout_weight="1"
                                    android:text="How to Collect Milk of Goat"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image5"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G6"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image6"
                                    android:layout_width="50dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/gbaby" />

                                <TextView
                                    android:id="@+id/text6"
                                    android:layout_width="77dp"
                                    android:layout_height="39dp"
                                    android:layout_weight="1"
                                    android:text="Assist Goat Birth"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image6"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G7"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginLeft="100dp"
                                android:layout_marginRight="100dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.511"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_subscriptions_24" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="98dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:text="Farm
                                    Tour"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="111dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G8"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image8"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_shopping_cart_24" />

                                <TextView
                                    android:id="@+id/text8"
                                    android:layout_width="97dp"
                                    android:layout_height="47dp"
                                    android:layout_weight="1"
                                    android:text="Click to
                                    Buy"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image8"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/G9"
                                android:layout_width="95dp"
                                android:layout_height="109dp"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/top_btn_background">

                                <ImageView
                                    android:id="@+id/image9"
                                    android:layout_width="47dp"
                                    android:layout_height="55dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/baseline_chat_24" />

                                <TextView
                                    android:id="@+id/text9"
                                    android:layout_width="77dp"
                                    android:layout_height="39dp"
                                    android:layout_weight="1"
                                    android:text="Chat With Owner"
                                    android:textAlignment="center"
                                    android:textColor="#1E4368"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/image9"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true"
                        app:iss_corner_radius="20"
                        app:iss_delay="1700"
                        app:iss_period="1700"
                        app:iss_title_background="@drawable/gradient" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/main_navigation_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>